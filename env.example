# QueueUp Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# SUPABASE AUTHENTICATION & DATABASE (FREE TIER)
# ========================================
# Get these from your Supabase project dashboard
EXPO_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ========================================
# STRIPE CONFIGURATION (FREE TESTING)
# ========================================
# Get these from your Stripe dashboard (test mode)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# ========================================
# GOOGLE SERVICES (FREE TIER)
# ========================================
# Get these from Google Cloud Console
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
EXPO_PUBLIC_GOOGLE_SIGNIN_WEB_CLIENT_ID=your_google_signin_web_client_id_here

# ========================================
# FIREBASE CONFIGURATION (FREE)
# ========================================
# Get these from Firebase Console -> Project Settings -> General
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id
EXPO_PUBLIC_FIREBASE_VAPID_KEY=your_firebase_vapid_key_here

# ========================================
# PUSH NOTIFICATIONS (FREE)
# ========================================
# Get these from Expo dashboard (optional - using Firebase instead)
EXPO_PUBLIC_EXPO_PROJECT_ID=your_expo_project_id_here

# ========================================
# EMAIL SERVICES (FREE TIER)
# ========================================
# Get these from SendGrid (free tier: 100 emails/day)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# ========================================
# BACKEND API CONFIGURATION
# ========================================
# Backend API URL - Update this to match your backend server
EXPO_PUBLIC_API_URL=http://localhost:3001/api

# ========================================
# APP CONFIGURATION
# ========================================
EXPO_PUBLIC_APP_NAME=QueueUp
EXPO_PUBLIC_APP_URL=https://queuedv5.vercel.app
EXPO_PUBLIC_APP_VERSION=5.0.0

# ========================================
# DEVELOPMENT SETTINGS
# ========================================
NODE_ENV=development
EXPO_PUBLIC_DEBUG=true
EXPO_PUBLIC_MOCK_MODE=true

# ========================================
# PRODUCTION SETTINGS (when ready)
# ========================================
# NODE_ENV=production
# EXPO_PUBLIC_DEBUG=false
# EXPO_PUBLIC_MOCK_MODE=false
